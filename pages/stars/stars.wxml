
<!--pages/stars/stars.wxml-->

<!--index.wxml-->
<block wx:for="{{stars}}">
  <image class="star-image" style="left: {{item*150}}rpx" src="{{key > item ?(key-item == 0.5?halfSrc:selectedSrc) : normalSrc}}">
    <view class="item" style="left:50rpx" data-key="{{item+1}}" bindtap="selectRight"></view>
  </image>
</block>